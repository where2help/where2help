<p id="notice"><%= notice %></p>

<h1>Listing Needs</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Skill</th>
      <th>Volunteers needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.location %></td>
        <td><%= need.start_time %></td>
        <td><%= need.end_time %></td>
        <td><%= need.skill %></td>
        <td><%= need.volunteers_needed %></td>
        <td><%= link_to 'Show', need %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

