<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= error_span(@user[:email]) %>
  <%= f.input :encrypted_password %>
  <%= error_span(@user[:encrypted_password]) %>
  <%= f.input :reset_password_token %>
  <%= error_span(@user[:reset_password_token]) %>
  <%= f.input :reset_password_sent_at %>
  <%= error_span(@user[:reset_password_sent_at]) %>
  <%= f.input :remember_created_at %>
  <%= error_span(@user[:remember_created_at]) %>
  <%= f.input :current_sign_in_at %>
  <%= error_span(@user[:current_sign_in_at]) %>
  <%= f.input :last_sign_in_at %>
  <%= error_span(@user[:last_sign_in_at]) %>
  <%= f.input :current_sign_in_ip %>
  <%= error_span(@user[:current_sign_in_ip]) %>
  <%= f.input :last_sign_in_ip %>
  <%= error_span(@user[:last_sign_in_ip]) %>
  <%= f.input :first_name %>
  <%= error_span(@user[:first_name]) %>
  <%= f.input :last_name %>
  <%= error_span(@user[:last_name]) %>
  <%= f.input :phone %>
  <%= error_span(@user[:phone]) %>
  <%= f.input :admin %>
  <%= error_span(@user[:admin]) %>
  <%= f.input :ngo_admin %>
  <%= error_span(@user[:ngo_admin]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
<% end %>
