<div class="row">
  <div class="page-header text-center">
    <h2><i class="fa fa-user" aria-hidden="true"></i> <%= t('.sign_up') %></h2>
  </div>
  <div class="col-sm-6">
    <%= image_tag 'sign_up_user.png', class: 'img-responsive img-rounded' %>
    <%= simple_format t('.motivation_txt') %>
  </div>
  <div class="col-sm-4">
    <h4><i class="fa fa-user" aria-hidden="true"></i> <%= t('.profile') %></h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control'  %>
        <% if @minimum_password_length %>
          <span class="help-block">(<%= "#{@minimum_password_length} #{t('.min_characters')}" %>)</span>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :terms_and_conditions do %>
          <%= f.check_box :terms_and_conditions %> <%= f.object.class.human_attribute_name(:terms_and_conditions) %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.button t('devise.registrations.new.sign_up'), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>" }, class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  <div>
</div>
